<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblInfo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/info"
            android:textColor="@color/md_grey_800"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/dialogCloseBtnTask"
            android:clickable="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent_100"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close__1_" />

    </RelativeLayout>

   <RelativeLayout
       android:layout_marginTop="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_alignParentTop="true"
           android:layout_marginStart="5dp"
           android:layout_marginEnd="5dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:gravity="center">

           <LinearLayout
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_marginBottom="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/ic_to_do_list" />

                   <TextView
                       android:id="@+id/dialogNameTask"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:fontFamily="@font/roboto_regular"
                       android:text="@string/title"
                       android:textColor="@color/md_black_1000"
                       android:textSize="15sp"
                       android:textStyle="bold"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginBottom="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/ic_start_date" />

                   <TextView
                       android:id="@+id/dialogStartDateTask"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:fontFamily="@font/roboto_regular"
                       android:text="@string/start_date"
                       android:textColor="@color/md_black_1000"
                       android:textSize="15sp"
                       android:textStyle="bold"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginBottom="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/ic_end_date" />

                   <TextView
                       android:id="@+id/dialogEndDateTask"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:fontFamily="@font/roboto_regular"
                       android:text="@string/end_date"
                       android:textColor="@color/md_black_1000"
                       android:textSize="15sp"
                       android:textStyle="bold"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginBottom="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/ic_clock" />

                   <TextView
                       android:id="@+id/dialogTimeTask"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:fontFamily="@font/roboto_regular"
                       android:text="@string/end_time"
                       android:textColor="@color/md_black_1000"
                       android:textSize="15sp"
                       android:textStyle="bold"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginBottom="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/ic_task_status" />

                   <TextView
                       android:id="@+id/dialogStatusTask"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:fontFamily="@font/roboto_regular"
                       android:text="@string/status"
                       android:textColor="@color/md_black_1000"
                       android:textSize="15sp"
                       android:textStyle="bold"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginBottom="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/ic_files" />

                   <TextView
                       android:id="@+id/dialogFilesTask"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:fontFamily="@font/roboto_regular"
                       android:text="@string/files"
                       android:textColor="@color/md_black_1000"
                       android:textSize="15sp"
                       android:textStyle="bold"/>
               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
   </RelativeLayout>


</androidx.cardview.widget.CardView>