<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_review_order_roducts_cardview_id"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/ic_baseline_close_24" />


                <TextView
                    android:id="@+id/item_revie_order_list_products_description_id"
                    android:layout_width="269dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/item_revie_order_list_products_price_total_id"
                    android:layout_toEndOf="@+id/imageView"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:text="Procedimientos"
                    android:textColor="#2d2d2d"
                    android:textSize="10sp"
                    cardview:layout_constraintBottom_toBottomOf="parent"
                    cardview:layout_constraintEnd_toStartOf="@+id/item_revie_order_list_products_price_total_id"
                    cardview:layout_constraintHorizontal_bias="0.0"
                    cardview:layout_constraintStart_toEndOf="@+id/imageView"
                    cardview:layout_constraintVertical_bias="0.083" />

                <TextView
                    android:id="@+id/item_revie_order_list_products_price_unit_id"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_revie_order_list_products_description_id"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/item_revie_order_list_products_price_total_id"
                    android:layout_toEndOf="@+id/imageView"
                    android:fontFamily="@font/roboto_regular"
                    android:text="NÂ° pago 1"
                    android:textColor="#2d2d2d"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/item_review_order_list_products_text_cant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_revie_order_list_products_price_unit_id"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/item_revie_order_list_products_price_total_id"
                    android:layout_toEndOf="@+id/imageView"
                    android:gravity="top|start"
                    android:text="pendiente"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="11sp"
                    cardview:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/item_revie_order_list_products_price_total_id"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="$ 44.50"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    cardview:layout_constraintBottom_toBottomOf="parent"
                    cardview:layout_constraintEnd_toEndOf="parent"
                    cardview:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/item_review_order_list_products_text_cant"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorTurquezaBanco" />

            </RelativeLayout>


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>