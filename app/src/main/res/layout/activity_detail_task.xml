<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_abstract"
    tools:context=".activities.TasksActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btnBackDetailTask"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:background="@drawable/circle_bg_grey_transparent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/square_green_bg"
                android:text="@string/detail_task"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeDetailTask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="38dp"
            android:layout_marginRight="10dp">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <androidx.cardview.widget.CardView
                   android:layout_margin="5dp"
                   app:cardElevation="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_alignParentStart="true"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentTop="true"
                       android:layout_marginStart="5dp"
                       android:layout_marginEnd="5dp"
                       android:layout_marginTop="5dp"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="5dp"
                       android:gravity="center">

                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center|start"
                               android:orientation="horizontal">

                               <ImageView
                                   android:layout_marginLeft="10dp"
                                   android:layout_width="18dp"
                                   android:layout_height="18dp"
                                   android:src="@drawable/ic_start_date" />

                               <TextView
                                   android:id="@+id/lblStartDateDT"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginLeft="8dp"
                                   android:fontFamily="@font/roboto_regular"
                                   android:text="@string/start_date"
                                   android:textColor="@color/md_black_1000"
                                   android:textSize="15sp"
                                   android:textStyle="bold"/>
                           </LinearLayout>

                           <LinearLayout
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center|start"
                               android:orientation="horizontal">

                               <ImageView
                                   android:layout_marginLeft="10dp"
                                   android:layout_width="18dp"
                                   android:layout_height="18dp"
                                   android:src="@drawable/ic_clock" />

                               <TextView
                                   android:id="@+id/lblEndTimeDT"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginLeft="8dp"
                                   android:fontFamily="@font/roboto_regular"
                                   android:text="@string/end_time"
                                   android:textColor="@color/md_black_1000"
                                   android:textSize="15sp"
                                   android:textStyle="bold"/>
                           </LinearLayout>


                       </LinearLayout>
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center|start"
                               android:orientation="horizontal">

                               <ImageView
                                   android:layout_marginLeft="10dp"
                                   android:layout_width="18dp"
                                   android:layout_height="18dp"
                                   android:src="@drawable/ic_end_date" />

                               <TextView
                                   android:id="@+id/lblEndDateDT"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginLeft="8dp"
                                   android:fontFamily="@font/roboto_regular"
                                   android:text="@string/end_date"
                                   android:textColor="@color/md_black_1000"
                                   android:textSize="15sp"
                                   android:textStyle="bold"/>
                           </LinearLayout>

                           <LinearLayout
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center|start"
                               android:orientation="horizontal">

                               <ImageView
                                   android:layout_marginLeft="10dp"
                                   android:layout_width="18dp"
                                   android:layout_height="18dp"
                                   android:src="@drawable/ic_task_status" />

                               <TextView
                                   android:id="@+id/lblStatusDT"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginLeft="8dp"
                                   android:fontFamily="@font/roboto_regular"
                                   android:text="@string/status"
                                   android:textColor="@color/md_black_1000"
                                   android:textSize="15sp"
                                   android:textStyle="bold"/>
                           </LinearLayout>

                       </LinearLayout>

                   </LinearLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_margin="5dp"
                   app:cardElevation="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_margin="10dp"
                       android:textSize="15sp"
                       android:textColor="@color/md_black_1000"
                       android:id="@+id/lblTitleDT"
                       android:text="@string/detail_task"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_margin="5dp"
                   app:cardElevation="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:text="@string/detail_task_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/md_black_1000"
                        android:id="@+id/lblDescriptionDT"
                        android:text="@string/detail_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_margin="5dp"
                   app:cardElevation="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_marginTop="10dp"
                           android:layout_marginStart="10dp"
                           android:textSize="15sp"
                           android:text="@string/files"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/recyclerFilesDT"
                           android:layout_marginTop="5dp"
                           android:layout_marginStart="10dp"
                           android:layout_marginEnd="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

           </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>