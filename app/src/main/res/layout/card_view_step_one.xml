<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appointment_cvStep1"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:contentPadding="12dp"
    tools:context=".activities.AppointmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/appointment_layout_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/appointment_text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_description"
                android:inputType="text"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_specialty" />

        <Spinner
            android:id="@+id/appointment_spinnerSpecialties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_type" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/appointment_radioGroupType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:checkedButton="@id/appointment_rbType1"
            android:orientation="vertical">

            <RadioButton
                android:onClick="checkedTypeAppoinment"
                android:clickable="true"
                android:id="@+id/appointment_rbType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type1"
                tools:ignore="OnClick" />

            <RadioButton
                android:onClick="checkedTypeAppoinment"
                android:clickable="true"
                android:id="@+id/appointment_rbType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type2" />

            <RadioButton
                android:onClick="checkedTypeAppoinment"
                android:clickable="true"
                android:id="@+id/appointment_rbType3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type3" />
            <RadioButton
                android:onClick="checkedTypeAppoinment"
                android:clickable="true"
                android:id="@+id/appointment_rbType4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type4" />

            <RadioButton
                android:onClick="checkedTypeAppoinment"
                android:clickable="true"
                android:id="@+id/appointment_rbType5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type5" />
        </RadioGroup>

        <Button
            android:id="@+id/appointment_btnNext"
            style="@style/MenuButton"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:drawableEnd="@drawable/ic_navigate_next"
            android:text="@string/btn_next" />

    </LinearLayout>

</androidx.cardview.widget.CardView>